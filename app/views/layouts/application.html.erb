<!DOCTYPE html>
<html>
<head>
  <title>Mediashare</title>
  <%= stylesheet_link_tag 'application' %>
  
    
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    
    <% if current_user %>
    <div id = "header">
      <div id = "web_name">MediaShare
        <p>Welcome <%= current_user.first_name %></p>
      </div>
      <div class = "links" id = "home_link"><%= link_to 'Home', user_news_feeds_path(current_user) %></div>
      <div class = "links" id = "friends_link"><%= link_to 'Friends', friendships_path(current_user)%></div>
      <div class = "links" id = "my_uploads_link"><%= link_to 'My Uploads', users_path(current_user)%></div>
      <div class = "links" id = "upload_link"><%= link_to 'Upload', new_user_media_path(current_user) %></div>
      <%if current_user %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, id: "logout_button" %>
      <% end %>
    </div>
    
    <% end %>

    <%= flash[:notice] %>


    
    
    <%= yield %>
  </body>
  </html>
